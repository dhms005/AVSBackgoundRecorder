<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/mNativeBannerAd"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/cardbg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/ic_back"
                app:tint="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_weight="1"
                android:fontFamily="@font/regular"
                android:text="Ultra Power Saving Mode"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

            <ImageView
                android:id="@+id/qureka_ad"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_10sdp"
                android:onClick="querka"
                android:src="@drawable/qureka_button1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="-10dp"
            android:layout_weight="3.5"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_marginTop="-20dp"
                android:gravity="center">

                <com.hookedonplay.decoviewlib.DecoView
                    android:id="@+id/dynamicArcView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="12dp"
                    android:padding="8dp"
                    app:dv_lineWidth="5dp" />

                <TextView
                    android:id="@+id/completion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:text="0%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_30sdp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="20">

                <ImageView
                    android:id="@+id/istpic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_grey_dot"
                    android:visibility="visible"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/ist"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="27dp"
                    android:layout_weight="18.5"
                    android:fontFamily="@font/regular"
                    android:gravity="left|center_vertical|center_horizontal|center"
                    android:text="Decreasing Screen Brightness Upto 80%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="20">

                <ImageView
                    android:id="@+id/secpic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_grey_dot"
                    android:visibility="visible"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/sec"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="27dp"
                    android:layout_weight="18.5"
                    android:fontFamily="@font/regular"
                    android:gravity="left|center_vertical|center_horizontal|center"
                    android:text="Decreasing Device Performance "
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="20">

                <ImageView
                    android:id="@+id/thipic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_grey_dot"
                    android:visibility="visible"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/thi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="27dp"
                    android:layout_weight="18.5"
                    android:fontFamily="@font/regular"
                    android:gravity="left|center_vertical|center_horizontal|center"
                    android:text="Closing Background Apps and Tasks"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="20">

                <ImageView
                    android:id="@+id/foupic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_weight="1.5"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_grey_dot"
                    android:visibility="visible"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/fou"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="27dp"
                    android:layout_weight="18.5"
                    android:fontFamily="@font/regular"
                    android:gravity="left|center_vertical|center_horizontal|center"
                    android:text="Some System Apps will Close"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mNativeBannerAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" />
</RelativeLayout>
