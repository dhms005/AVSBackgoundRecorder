<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/_40sdp"
    android:animateLayoutChanges="true"
    android:background="@drawable/floating_brush_bg"
    android:orientation="horizontal"
    android:paddingStart="16.0dip"
    android:paddingTop="8.0dip"
    android:paddingEnd="16.0dip"
    android:paddingBottom="8.0dip">

    <ImageView
        android:id="@+id/imgCamera"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_gravity="center"
        android:layout_margin="1.0dip"
        android:layout_weight="1.0"
        android:src="@drawable/ic_camera_brush"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgEraser"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_margin="1.0dip"
        android:layout_weight="1.0"
        android:src="@drawable/ic_eraser_brush" />

    <ImageView
        android:id="@+id/imgUndo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_margin="1.0dip"
        android:layout_weight="1.0"
        android:src="@drawable/ic_undo_brush" />

    <ImageView
        android:id="@+id/imgPaint"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_margin="1.0dip"
        android:layout_weight="1.0"
        android:src="@drawable/ic_paint_brush" />

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_margin="1.0dip"
        android:layout_marginEnd="16.0dip"
        android:layout_weight="1.0"
        android:src="@drawable/ic_close_brush" />
</LinearLayout>