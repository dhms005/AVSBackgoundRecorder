<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/cardbg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/back_arrow_width"
            android:layout_height="@dimen/back_arrow_height"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="?attr/actionBarItemBackground"
            android:src="@drawable/ic_back"
            app:tint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_weight="1"
            android:fontFamily="@font/regular"
            android:text="Speed Booster"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <ImageView
            android:id="@+id/qureka_ad"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_10sdp"
            android:onClick="querka"
            android:src="@drawable/qureka_button1" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:fontFamily="@font/regular"
                            android:gravity="center"
                            android:text="Speed Booster"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="-700dp"
                            android:layout_marginTop="0dp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/waves"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="-260dp"
                                android:src="@drawable/ic_cpu_cooler_wave"
                                android:visibility="visible"
                                app:tint="@color/colorPrimary" />

                            <RelativeLayout
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginEnd="5dp">

                                <ImageView
                                    android:layout_width="290dp"
                                    android:layout_height="190dp"
                                    android:padding="120dp"
                                    android:paddingLeft="40dp" />

                                <LinearLayout
                                    android:layout_width="145dp"
                                    android:layout_height="145dp"
                                    android:layout_marginLeft="19dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginRight="25dp"
                                    android:layout_marginBottom="23dp"
                                    android:orientation="vertical">

                                    <com.hookedonplay.decoviewlib.DecoView
                                        android:id="@+id/dynamicArcView2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />

                                    <com.hookedonplay.decoviewlib.DecoView
                                        android:id="@+id/dynamicArcView3"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:visibility="gone" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="190dp"
                                    android:layout_height="190dp"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/meter"
                                    android:visibility="visible" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="-5dp"
                                    android:layout_marginTop="17dp"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/top"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:fontFamily="@font/regular"
                                        android:text="Storage"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:textColor="@color/txt_blue"
                                        android:textSize="11sp"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/centree"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/top"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginBottom="-30dp"
                                        android:fontFamily="@font/regular"
                                        android:text="100 MB"
                                        android:textColor="#000000"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/bottom"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/centree"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="40dp"
                                        android:fontFamily="@font/regular"
                                        android:text="Found"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:textColor="@color/red"
                                        android:textSize="11sp" />
                                </RelativeLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="170dp"
                                android:layout_marginEnd="40dp"
                                android:gravity="end">

                                <LinearLayout
                                    android:id="@+id/scanlay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/scanning"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/regular"
                                        android:gravity="center"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/optimizelay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/optbutton"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_optimize" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:padding="@dimen/_20sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_120sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_processes" />

                            <TextView
                                android:id="@+id/processes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_30sdp"
                                android:fontFamily="@font/regular"
                                android:text="13"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_20sdp" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/regular"
                            android:gravity="center"
                            android:text="Running Processes"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/appsused"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/regular"
                                android:gravity="right"
                                android:text="1.24 GB / "
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/appsfreed"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/regular"
                                android:gravity="left"
                                android:text="2.67 GB"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_120sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_ram2" />

                            <TextView
                                android:id="@+id/ramperct"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_30sdp"
                                android:fontFamily="@font/regular"
                                android:text="48%"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_20sdp" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/regular"
                            android:gravity="center"
                            android:text="Ram Usage"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/usedram"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/regular"
                                android:gravity="right"
                                android:text="1.24 GB / "
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/totalram"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/regular"
                                android:gravity="left"
                                android:text="2.67 GB"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/mNativeBannerAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:gravity="center"
        android:orientation="horizontal" />
</LinearLayout>
